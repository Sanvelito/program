<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="program.Views.User.UserAccountPage"
             Title="UserAccountPage">
    <ContentPage.Content>
        <StackLayout Spacing="10" Padding="20">
            <Label Text="Личный кабинет" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />

            <Label Text="Имя:" FontSize="16" />
            <Entry Placeholder="Введите ваше имя" />

            <Label Text="Электронная почта:" FontSize="16" />
            <Entry Placeholder="Введите вашу электронную почту" />

            <Label Text="Номер телефона:" FontSize="16" />
            <Entry Placeholder="Введите ваш номер телефона" />

            <Button Text="Сохранить" HorizontalOptions="Center" />

            <Button Text="Выход" Command="{Binding LogoutCommand}" HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>